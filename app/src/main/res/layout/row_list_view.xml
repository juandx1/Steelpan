<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Name"
        android:textColor="@color/dark_gray"
        android:id="@+id/textViewSongName"
        android:layout_alignTop="@+id/imageViewSong"
        android:layout_toRightOf="@+id/imageViewSong"
        android:layout_toEndOf="@+id/imageViewSong"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/song_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By this artist"
        android:id="@+id/textViewSongArtist"
        android:layout_alignBottom="@+id/imageViewSong"
        android:layout_alignLeft="@+id/textViewSongName"
        android:layout_alignStart="@+id/textViewSongName"
        android:textSize="@dimen/song_artist" />

    <ImageView
        android:layout_width="@dimen/song_image"
        android:layout_height="@dimen/song_image"
        android:id="@+id/imageViewSong"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />




</RelativeLayout>